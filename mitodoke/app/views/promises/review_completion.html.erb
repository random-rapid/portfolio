<% content_for(:title, "証拠の確認") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h2 class="my-4">提出された証拠</h2>

      <% if @promise.evidence.attached? %>
        <div class="mb-4 text-center">
          <%= image_tag @promise.evidence, class: "img-fluid rounded shadow" %>
        </div>
      <% else %>
        <p class="text-muted">証拠画像は提出されていません。</p>
      <% end %>

      <div class="d-flex justify-content-between">
        <%= button_to "承諾する", accept_completion_promise_path(@promise, token: @participant.token), method: :patch, class: 'btn btn-teal my-5 px-5 py-2 fs-3' %>
        <%= button_to "却下する", reject_completion_promise_path(@promise, token: @participant.token), method: :patch, class: 'btn btn-pink ms-5 my-5 px-5 py-2 fs-3' %>
      </div>
    </div>
  </div>
</div>